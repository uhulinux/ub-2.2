+		<title>General recording settings</title>
+		<screenshot>
+		  <mediaobject>
+			 <imageobject><imagedata fileref="figures/recording-general.png" format="PNG"/>
+			 </imageobject>
+			 <textobject>
+				<phrase>General recording settings.</phrase>
+			 </textobject>
+		  </mediaobject>
+		</screenshot>
