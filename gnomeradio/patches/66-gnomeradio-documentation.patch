-<sect2 id="gnomeradio-usage-misc">
-<title>Misc. controls</title>
-	 <figure id="misc-controls-fig"> 
-		<title>Remaining controls</title> 
-		<screenshot> 
-		  <mediaobject> 
-			 <imageobject><imagedata fileref="figures/misc-controls.png" format="PNG"/> 
