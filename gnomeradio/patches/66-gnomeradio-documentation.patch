+	  <row rowsep="1">
+	    <entry>Comanda</entry>
+	    <entry>Descripcion</entry>
+	  </row>
+	</thead>
+	<tbody>
+	  <row rowsep="0">
+        <entry>
+			<command>tune up</command>
+		</entry>
+        <entry>
+			Scan forward.
+		</entry>
+	  </row>
+	  <row rowsep="0">
+        <entry>
+			<command>tune down</command>
+		</entry>
+        <entry>
+			Scan backwards.
+		</entry>
+	  </row>
+	  <row rowsep="0">
+        <entry>
+			<command>preset up</command>
+		</entry>
+        <entry>
+			Select next preset.
+		</entry>
+	  </row>
+	  <row rowsep="0">
+        <entry>
+			<command>preset down</command>
+		</entry>
+        <entry>
+			Select previous preset.
+		</entry>
+	  </row>
+	  <row rowsep="0">
+        <entry>
+			<command>volume up</command>
+		</entry>
+        <entry>
+			Increase the volume.
+		</entry>
+	  </row>
+	  <row rowsep="0">
+        <entry>
+			<command>volume down</command>
+		</entry>
+        <entry>
+			Decrease the volume.
+		</entry>
+	  </row>
+	  <row rowsep="0">
+        <entry>
+			<command>mute</command>
+		</entry>
+        <entry>
+			Mute/unmute the volume.
+		</entry>
+	  </row>
+	  <row rowsep="0">
+        <entry>
+			<command>sortir</command>
+		</entry>
+        <entry>
+			Terminate Gnomeradio.
+		</entry>
+	  </row>
+	  <row rowsep="0">
+        <entry>
+			<command>preset x</command>
+		</entry>
+        <entry>
+			Select preset x + 1 (where x is between 0 and 9)
+		</entry>
+	  </row>
+	</tbody>
+  </tgroup>
+</table>
+</sect2>
+</sect1>
