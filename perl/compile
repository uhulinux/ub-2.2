#!/bin/sh -eux

sh Configure -des \
	-Dprefix="/usr"              \
	-Dvendorprefix="/usr"        \
	-Dsiteprefix="/usr"          \
	-Dman3ext="3pm"              \
	-Dcf_by="UHU Linux"          \
	-Dmyhostname="localhost"     \
	-Dperladmin="root@localhost" \
	-Dd_dosuid                   \
	-Ud_csh                      \
	-Duseshrplib                 \
	-Dusethreads                 \
	-Duse64bitint                \
	-Dusemorebits                \
	-Darchname=i386-linux

make
make test-notty
