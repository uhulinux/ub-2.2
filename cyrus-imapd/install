#!/bin/sh -eux

# rename "master" to "cyrus-master" to avoid conflict with postfix
for f in man/*.{5,8} doc/*.html doc/man/*.html; do
	ub_replace "master(8)" "cyrus-master(8)" "$f"
done

ub_install

# rename "master" to "cyrus-master" to avoid conflict with postfix
mv "$UB_INSTALLDIR"/usr/libexec/cyrus-imapd/{,cyrus-}master
mv "$UB_INSTALLDIR"/usr/share/man/man8/{,cyrus-}master.8

ln -s ../libexec/cyrus-imapd/cyrus-master "$UB_INSTALLDIR"/usr/sbin/

cp master/conf/prefork.conf "$UB_INSTALLDIR"/etc/cyrus.conf
