#!/bin/sh -eux

if [ $((`stat -f -c "%a" .`*`stat -f -c "%s" .`/(1024*1024*1024))) -lt 12 ]; then
	echo "At least 12 GB free space is required!"
	exit 1
fi

# átpakolunk az /ext_sources alá mindent, mert
# ott fogja keresni a letöltött forráscsomagokat
mkdir ext_sources
mv *.{gz,bz2,zip,tgz} ext_sources/

cd main/

export JAVA_HOME=/usr/lib/java
export QT4DIR="/usr/lib/qt4"
export QT4INC="/usr/lib/qt4/include"
export QT4LIB="/usr/lib/qt4/lib"
export LDFLAGS="-Wl,-rpath,/usr/lib/openoffice4/program/"

autoconf

./configure \
	--prefix="/usr"             \
	--sysconfdir="/etc"         \
	--localstatedir="/var"      \
	--mandir="/usr/share/man"   \
	--infodir="/usr/share/info" \
	--build="i686-uhu-linux"    \
	--host="i686-uhu-linux"     \
	--with-lang="en-GB hu" \
	--with-vendor="ubk.hu" \
	--with-jdk-home="/usr/lib/java" \
	--with-ant-home="/usr/lib/apache-ant" \
	--with-system-libs \
	--with-system-headers \
	--without-afms \
	--without-fonts \
	--without-ppds \
	--without-junit \
	--without-system-jars \
	--without-system-apr \
	--without-system-apr-util \
	--without-system-hsqldb \
	--without-system-hyphen \
	--without-system-icu \
	--without-system-jpeg \
	--without-system-libwpd \
	--without-system-lucene \
	--without-system-mdds \
	--without-system-mythes \
	--without-system-python \
	--without-system-serf \
	--without-system-vigra \
	--disable-beanshell \
	--disable-coinmp \
	--disable-epm \
	--disable-fetch-external \
	--disable-gconf \
	--disable-gnome-vfs \
	--disable-odk \
	--disable-online-update \
	--disable-saxon \
	--enable-crashdump \
	--enable-gio \
	--enable-gstreamer \
	--enable-hunspell \
	--enable-hyphen \
	--enable-kde4
#	--enable-pdfimport

./bootstrap

source ./LinuxX86Env.Set.sh

cd instsetoo_native

# build --all --show -P2 -- -P2
build --all -P2 -- -P2

